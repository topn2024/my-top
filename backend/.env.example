# TOP_N 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# Flask 配置
TOPN_SECRET_KEY=your_secret_key_here_change_in_production
FLASK_ENV=production

# AI API 密钥
ZHIPU_API_KEY=your_zhipu_api_key_here
QIANWEN_API_KEY=your_qianwen_api_key_here
AI_PROVIDER=zhipu
DEFAULT_AI_MODEL=glm-4-plus

# 数据库配置
DATABASE_URL=sqlite:///topn.db

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# 生产环境注意事项:
# 1. TOPN_SECRET_KEY 必须使用强随机字符串
# 2. 确保 .env 文件权限为 600 (chmod 600 .env)
# 3. 不要将 .env 文件提交到版本控制系统
